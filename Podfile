platform :ios, '13.0'

def my_app_pods
  # Moya
  pod 'Moya', '~> 15.0'

  # Localization strings
  pod 'Localize' , '~> 2.3.0'

  # lottie-ios
  pod 'lottie-ios', '~> 3.5.0'

  #SnapKit
  pod 'SnapKit', '~> 5.6.0'

  # Reachability
  pod 'ReachabilitySwift', :inhibit_warnings => true

  # Download Image
  pod 'Kingfisher', '~> 7.0', :inhibit_warnings => true
end

target 'SpaceXLatestLaunch' do
  
  use_frameworks!

  # all my pods
  my_app_pods

  # Pods for SpaceXLatestLaunch

end
